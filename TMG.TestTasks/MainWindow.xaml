<Window
    x:Class="TMG.TestTasks.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TMG.TestTasks"
    xmlns:="clr-namespace:TMG.TestTasks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:v
    </Window.DataContext>
    <Grid DockPanel.Dock="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                Text="Идентификаторы строк:" />
            <TextBox
                MinWidth="100"
                Margin="5"
                VerticalAlignment="Center" />
            <Button
                Margin="5"
                Padding="5,0,5,0"
                Content="Подсчитать" />
        </StackPanel>
        <DataGrid Grid.Row="1" />
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="lblCursorPosition" />
            </StatusBarItem>
        </StatusBar>
    </Grid>

</Window>
